{% extends 'base.html.twig' %}

{% block title %}Пользователь{% endblock %}

{% block body %}
    <h1>Пользователь</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ category.id }}</td>
        </tr>
        <tr>
            <th>Имя</th>
            <td>{{ category.name }}</td>
        </tr>
        <tr>
            <th>Город</th>
            <td>{{ category.country }}</td>
        </tr>
        <tr>
            <th>Погода</th>
            <td>{{ weather.main.temp }} °C, {{ weather.weather.0.description }}</td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('app_category_index') }}">назад</a>

    <a href="{{ path('app_category_edit', {'id': category.id}) }}">редактировать</a>

    {{ include('category/_delete_form.html.twig') }}
{% endblock %}
